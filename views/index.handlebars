    <h1 class="display-4" style="font-family: 'Orbitron', sans-serif;">
        <center>Eat-Da-Burger!</center</h1> <p class="lead">What kind of burger do you fancy?</p>

            <img src="https://thumbs.gfycat.com/FlamboyantConcernedBorzoi-max-1mb.gif" alt="cheeseburger"
                style="max-width: 300px" />

</div>

<div class="form-group">
    <center>
        {{!-- <div class="col-md-4 col-sm-12 col-xs-12"> --}}
        <div class="col-md-11 col-md-offset-1 text-center" style="margin-top:25px">
            <label for="burger" style="color: black; font-family: 'Orbitron', sans-serif; font-weight: bold;">
                <font size="6">Order Your
                    Burger!</font>
            </label>
            <form class="add-burger-form" action="/" method="POST">
                <div class="form-group">
                    <input type="text" id="newBurger" name="name" placeholder="Burger name">
                    <button type="submit" class="btn btn-outline-secondary">Submit</button>
                    <br></br>
            </form>
    </center>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h1><u>BURGER LIST</u></h1>
                {{#each burgers}}
                {{#unless this.devoured}}
                <div class="card-body" action="/{{this.id}}" method="POST"
                    style="font-size: 14pt; padding: 10px; color: black; font-family: 'Orbitron', sans-serif;"
                    font="color=orange">
                    {{this.burger_name}}
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>
